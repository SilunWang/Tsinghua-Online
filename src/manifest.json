{
	"manifest_version" : 2,
	"name" : "<%= pkg.name %>",
	"version":"<%= pkg.version %>",
	"description":"<%= pkg.description %>",
	"minimum_chrome_version" : "22",
	"background" : {
		"scripts" : ["js/jquery-1.9.1.min.js", "js/utils.js", "js/sjcl.js", "js/html-domparser.js", "js/coffee/const.js", "js/coffee/background.js"]
	},
	"permissions" : ["storage", "*://learn.tsinghua.edu.cn/*", "*://thudev.sinaapp.com/*"],
	"icons": {
		"16" : "icons/16.png",
		"48" : "icons/48.png",
		"128" : "icons/128.png"
	},
	"browser_action": {
		"default_icon": "icons/19.png",
		"default_title": "Learn Helper"
	}
}
